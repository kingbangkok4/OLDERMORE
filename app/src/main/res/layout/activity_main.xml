<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.oldermore.MainActivity">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="เข้าสู่ระบบ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/login"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txtPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblFogotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ลืมรหัสผ่าน?"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:background="@drawable/oldman"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="160dp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:hint="รหัสผ่าน"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/txtUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtUserName"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:hint="ชื่อผู้ใช้งาน"
        android:textStyle="bold"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="11dp"
        android:text="ลงทะเบียน"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/buttonr"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

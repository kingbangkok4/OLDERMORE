<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <Button
        android:id="@+id/btnMainMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/mmain1"
        android:text="เมนูหลัก"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="โพสต์"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold|italic"/>

    <ListView
        android:id="@+id/listPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnMainMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnPostImage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/background_light"/>

    <TextView
        android:id="@+id/lblName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnImageProfile"
        android:gravity="center"
        android:text="รูปโปรไฟล์/ชื่อ"/>

    <ImageButton
        android:id="@+id/btnImageProfile"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/txtPost"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/listPost"
        android:layout_alignLeft="@+id/listPost"
        android:layout_alignRight="@+id/listPost"
        android:layout_alignStart="@+id/listPost"
        android:layout_below="@+id/lblName"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="คุณกำลังคิดอะไรอยู่"
        android:inputType="textMultiLine"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/btnImage"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtPost"
        android:layout_toEndOf="@+id/btnAppImage"
        android:layout_toRightOf="@+id/btnAppImage"
        android:background="@drawable/photo2"
        android:text="รูป"/>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/txtPost"
        android:layout_alignStart="@+id/txtPost"
        android:layout_below="@+id/txtPost"
        android:layout_toLeftOf="@+id/btnAppImage"
        android:layout_toStartOf="@+id/btnAppImage"
        android:background="@drawable/postty"
        android:text="โพส"/>

    <Button
        android:id="@+id/btnAppImage"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtPost"
        android:layout_centerHorizontal="true"
        android:background="@drawable/flim"
        android:text="คลังรูป"/>

    <Button
        android:id="@+id/btnPostImage"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnImage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/no"/>

</RelativeLayout>
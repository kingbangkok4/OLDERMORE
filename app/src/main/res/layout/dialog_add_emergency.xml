<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">


    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtMobile"
        android:layout_alignBottom="@+id/txtMobile"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:text="เบอร์โทร"/>

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnImageProfile"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="เพิ่มผู้ติดต่อฉุกเฉิน"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMobile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtName"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toLeftOf="@+id/txtName"
        android:layout_toStartOf="@+id/txtName"
        android:text="ชื่อ"/>

    <EditText
        android:id="@+id/txtMobile"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/txtName"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignRight="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="15dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="10"
        android:text=""/>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblName"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text=""/>

    <ImageButton
        android:id="@+id/btnImageProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnCall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/call"
        android:layout_below="@+id/txtMobile"
        android:layout_alignLeft="@+id/btnImageProfile"
        android:layout_alignStart="@+id/btnImageProfile"
        android:layout_marginTop="64dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/save"
        android:text="บันทึก"
        android:layout_below="@+id/btnCall"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/btnHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข้อมูลสุขภาพ"
        android:layout_alignBaseline="@+id/btnCall"
        android:layout_alignBottom="@+id/btnCall"
        android:layout_toLeftOf="@+id/btnCall"
        android:layout_toStartOf="@+id/btnCall" />

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คนโปรด"
        android:layout_alignBaseline="@+id/btnCall"
        android:layout_alignBottom="@+id/btnCall"
        android:layout_toRightOf="@+id/btnCall"
        android:layout_toEndOf="@+id/btnCall" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editor_buttons_background"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnBoard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/board"
        android:text=""
        android:layout_above="@+id/btnLogout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnWhere"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/map"
        android:text=""
        android:layout_alignBaseline="@+id/btnEmerCall"
        android:layout_alignBottom="@+id/btnEmerCall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/profile"
        android:text=""
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/btnBoard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnEmergency"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/tell"
        android:layout_alignBaseline="@+id/btnEmerCall"
        android:layout_alignBottom="@+id/btnEmerCall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sett"
        android:text=""
        android:layout_alignBaseline="@+id/btnBoard"
        android:layout_alignBottom="@+id/btnBoard"
        android:layout_toRightOf="@+id/btnBoard"
        android:layout_toEndOf="@+id/btnBoard" />

    <Button
        android:id="@+id/btnPhotoRetouch"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/btnProfile"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnProfile"
        android:background="@drawable/picc"
        android:text="" />

    <Button
        android:id="@+id/btnNontifiction"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnSetting"
        android:background="@drawable/co" />

    <Button
        android:id="@+id/btnMsgCall"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/chat"
        android:layout_alignBaseline="@+id/btnPhotoRetouch"
        android:layout_alignBottom="@+id/btnPhotoRetouch"
        android:layout_toRightOf="@+id/btnBoard"
        android:layout_toEndOf="@+id/btnBoard" />

    <Button
        android:id="@+id/btnEmerCall"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/em"
        android:text=""
        android:layout_above="@+id/btnPhotoRetouch"
        android:layout_toRightOf="@+id/btnEmergency"
        android:layout_toEndOf="@+id/btnEmergency"
        android:layout_marginBottom="19dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/exit7"
        android:text="ออกจากระบบ"
        android:textStyle="bold" />

</RelativeLayout>
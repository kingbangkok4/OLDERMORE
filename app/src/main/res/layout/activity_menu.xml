<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavorite"
        android:layout_alignBaseline="@+id/btnMsgCall"
        android:layout_alignBottom="@+id/btnMsgCall"
        android:layout_alignLeft="@+id/btnProfile"
        android:layout_alignStart="@+id/btnProfile"
        android:layout_alignRight="@+id/btnProfile"
        android:layout_alignEnd="@+id/btnProfile"
        android:background="@drawable/favorite" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/btnHealth"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true"
        android:background="@drawable/health" />

    <Button
        android:text="อยู่ไหน/หลงทาง"
        android:id="@+id/button7"
        android:textStyle="bold"
        android:layout_height="120dp"
        android:background="@drawable/button_circle_green"
        android:layout_width="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp" />

    <Button
        android:text="ช่วยด้วย/ฉุกเฉิน"
        android:textStyle="bold"
        android:id="@+id/button5"
        android:background="@drawable/button_circle_red"
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMsgCall"
        android:layout_below="@+id/btnHealth"
        android:layout_alignLeft="@+id/btnHealth"
        android:layout_alignStart="@+id/btnHealth"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/btnHealth"
        android:layout_alignEnd="@+id/btnHealth"
        android:background="@drawable/message_call" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnKnowledge"
        android:layout_alignBaseline="@+id/btnManual"
        android:layout_alignBottom="@+id/btnManual"
        android:layout_alignLeft="@+id/btnNontifiction"
        android:layout_alignStart="@+id/btnNontifiction"
        android:background="@drawable/knowledge" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSetting"
        android:layout_alignBaseline="@+id/btnManual"
        android:layout_alignBottom="@+id/btnManual"
        android:layout_alignLeft="@+id/btnBoard"
        android:layout_alignStart="@+id/btnBoard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/setting" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnProfile"
        android:layout_alignBaseline="@+id/btnHealth"
        android:layout_alignBottom="@+id/btnHealth"
        android:background="@drawable/profile" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEmergency"
        android:text=""
        android:layout_alignTop="@+id/btnMsgCall"
        android:layout_alignLeft="@+id/btnPost"
        android:layout_alignStart="@+id/btnPost"
        android:background="@drawable/emergency" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnPhotoRetouch"
        android:layout_below="@+id/btnEmergency"
        android:layout_alignLeft="@+id/btnMsgCall"
        android:layout_alignStart="@+id/btnMsgCall"
        android:layout_marginTop="21dp"
        android:layout_alignRight="@+id/btnMsgCall"
        android:layout_alignEnd="@+id/btnMsgCall"
        android:background="@drawable/photo_retouch" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnBoard"
        android:layout_alignBaseline="@+id/btnPhotoRetouch"
        android:layout_alignBottom="@+id/btnPhotoRetouch"
        android:layout_alignLeft="@+id/btnEmergency"
        android:layout_alignStart="@+id/btnEmergency"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/board" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnNontifiction"
        android:layout_alignBaseline="@+id/btnPhotoRetouch"
        android:layout_alignBottom="@+id/btnPhotoRetouch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnFavorite"
        android:layout_alignEnd="@+id/btnFavorite"
        android:background="@drawable/nontification" />

    <Button
        android:text=""
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnManual"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnPhotoRetouch"
        android:layout_alignLeft="@+id/btnPhotoRetouch"
        android:layout_alignStart="@+id/btnPhotoRetouch"
        android:layout_alignRight="@+id/btnPhotoRetouch"
        android:layout_alignEnd="@+id/btnPhotoRetouch"
        android:background="@drawable/manual" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnPost"
        android:background="@drawable/post"
        android:layout_alignBaseline="@+id/btnHealth"
        android:layout_alignBottom="@+id/btnHealth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
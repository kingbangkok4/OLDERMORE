<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <Button
        android:text="เมนูหลัก"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMainMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button01" />

    <TextView
        android:text="แต่งรูป"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="กล้อง"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="38dp"
        android:id="@+id/btnCamera"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/btnAlbum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button06" />

    <Button
        android:text="แต่งรูป"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btnPhoto"
        android:background="@drawable/button05"
        android:layout_above="@+id/btnAlbum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:text="อัลบัม"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btnAlbum"
        android:background="@drawable/button04"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
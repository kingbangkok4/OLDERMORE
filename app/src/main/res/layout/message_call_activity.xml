<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <TextView
        android:text="ข้อความ / โทร"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:layout_below="@+id/editText12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:gravity="center"
        android:hint="กรุณาใส่คำค้นหา"
        android:ems="10"
        android:id="@+id/editText12"
        android:background="@android:color/background_light"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button40"
        android:layout_toLeftOf="@+id/button40"
        android:layout_toStartOf="@+id/button40" />

    <Button
        android:text="ค้นหา"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button40"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="แชท"
        android:layout_height="wrap_content"
        android:id="@+id/button42"
        android:layout_alignBaseline="@+id/button41"
        android:layout_alignBottom="@+id/button41"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="200dp" />

    <Button
        android:text="เพื่อน"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button41"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/button42" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="เมนูหลัก"
        android:layout_width="match_parent"
        android:id="@+id/btnMainMenu"
        android:gravity="center"
        android:background="@drawable/mmain1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtSearch"
        android:layout_alignStart="@+id/txtSearch"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <TextView
        android:text="ข้อความ / โทร"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="เพิ่มเพื่อน"
        android:layout_height="40dp"
        android:id="@+id/btnFriend"
        android:background="@drawable/friendd"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignStart="@+id/listView" />

    <Button
        android:text="ค้นหา"
        android:layout_height="40dp"
        android:id="@+id/btnSearch"
        android:background="@drawable/search1"
        android:layout_alignTop="@+id/txtSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/txtSearch"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:layout_below="@+id/spinnerFriendChat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnSearch"
        android:layout_toStartOf="@+id/btnSearch" />

    <Spinner
        android:text="แชท"
        android:layout_height="40dp"
        android:id="@+id/spinnerFriendChat"
        android:layout_width="match_parent"
        android:layout_below="@+id/btnFriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/background_light"
        android:id="@+id/listView"
        android:layout_above="@+id/btnMainMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSearch"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>
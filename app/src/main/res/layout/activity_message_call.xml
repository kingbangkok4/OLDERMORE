<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <Button
        android:text="เมนูหลัก"
        android:layout_width="match_parent"
        android:id="@+id/btnMainMenu"
        android:gravity="center"
        android:background="@drawable/button01"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/listFriend"
        android:layout_alignStart="@+id/listFriend"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/listMessage"
        android:layout_alignEnd="@+id/listMessage" />

    <TextView
        android:text="ข้อความ / โทร"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="เพื่อน"
        android:layout_height="40dp"
        android:id="@+id/btnFriend"
        android:background="@drawable/button06"
        android:layout_below="@+id/textView"
        android:layout_width="180dp"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignStart="@+id/listView" />

    <Button
        android:text="แชท"
        android:layout_height="40dp"
        android:id="@+id/btnChat"
        android:background="@drawable/button01"
        android:layout_width="180dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/listFriend"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:layout_below="@+id/btnFriend"
        android:layout_alignLeft="@+id/listMessage"
        android:layout_alignStart="@+id/listMessage"
        android:layout_toLeftOf="@+id/btnSearch"
        android:layout_toStartOf="@+id/btnSearch" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/background_light"
        android:id="@+id/listMessage"
        android:layout_below="@+id/listFriend"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnMainMenu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:text="ค้นหา"
        android:layout_height="40dp"
        android:id="@+id/btnSearch"
        android:background="@drawable/button10"
        android:layout_alignTop="@+id/listFriend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp" />

</RelativeLayout>
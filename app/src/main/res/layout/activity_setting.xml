<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:orientation="vertical">

    <Button
        android:id="@+id/btnFont24"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/btnFont22"
        android:layout_toEndOf="@+id/btnFont22"
        android:layout_toRightOf="@+id/btnFont22"
        android:text="24"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/btnMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/mmain1"
        android:text="เมนูหลัก"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="53dp"
        android:text="ขนาดตัวอักษร"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="ตั้งค่า"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="53dp"
        android:text="ขนาดตัวอักษร"/>

    <Button
        android:id="@+id/btnFont16"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="18dp"
        android:text="16"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/btnFont18"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btnFont16"
        android:layout_toEndOf="@+id/btnFont16"
        android:layout_toRightOf="@+id/btnFont16"
        android:text="18"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btnFont20"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/btnFont18"
        android:layout_toEndOf="@+id/btnFont18"
        android:layout_toRightOf="@+id/btnFont18"
        android:text="20"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnFont22"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/btnFont20"
        android:layout_toEndOf="@+id/btnFont20"
        android:layout_toRightOf="@+id/btnFont20"
        android:text="22"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnFont16"
        android:layout_alignStart="@+id/btnFont16"
        android:layout_below="@+id/btnFont16"
        android:layout_marginTop="20dp"
        android:text="สีพื้อนหลัง"/>

    <Button
        android:id="@+id/btnBg4"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnBg3"
        android:layout_alignBottom="@+id/btnBg3"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btnBg3"
        android:layout_toRightOf="@+id/btnBg3"
        android:background="#eafaea"/>

    <Button
        android:id="@+id/btnBg1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="35dp"
        android:background="#eee6ff"/>

    <Button
        android:id="@+id/btnBg2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnBg1"
        android:layout_alignBottom="@+id/btnBg1"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btnBg1"
        android:layout_toRightOf="@+id/btnBg1"
        android:background="#ffe6f2"/>

    <Button
        android:id="@+id/btnBg0"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnBg1"
        android:layout_alignBottom="@+id/btnBg1"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btnBg4"
        android:layout_toRightOf="@+id/btnBg4"
        android:background="@color/common_action_bar_splitter"/>

    <Button
        android:id="@+id/btnBg3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnBg2"
        android:layout_alignBottom="@+id/btnBg2"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btnBg2"
        android:layout_toRightOf="@+id/btnBg2"
        android:background="#e6f7ff"/>

    <Button
        android:id="@+id/btnSet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnBg4"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/btnFont24"
        android:layout_toStartOf="@+id/btnFont24"
        android:background="@color/wallet_bright_foreground_holo_dark"/>

</RelativeLayout>